<%- include('layout', { title: 'Home', header: 'Welcome to My Resume', body: `


<section class="resume-section">
    <h2>Professional Summary</h2>
    <textarea class="form-control" placeholder="Enter your introduction"></textarea>
</section>

<section class="resume-section">
    <h2>Personal Details</h2>
    <form action="/submit-form" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <select id="title" class="form-control">
                <option value="miss">Miss</option>
                <option value="mr">Mr</option>
            </select>
        </div>

        <div class="form-group">
            <label for="firstname">Firstname</label>
            <input type="text" id="firstname" name="firstname" class="form-control" placeholder="Enter your firstname">
        </div>

        <div class="form-group">
            <label for="middlename">Middle Name</label>
            <input type="text" id="middlename" name="middlename" class="form-control" placeholder="Enter your middle name">
        </div>

        <div class="form-group">
            <label for="surname">Surname</label>
            <input type="text" id="surname" name="surname" class="form-control" placeholder="Enter your surname">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email">
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" class="form-control" placeholder="Enter your address">
        </div>
    </form>
</section>

<section class="resume-section">
    <h2>Educational Details</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Study</th>
                <th>Designation 1</th>
                <th>Designation 2</th>
                <th>Designation 3</th>
                <th>Designation 4</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Name of University</th>
                <td><input type="text" class="form-control" placeholder="Enter university name"></td>
                <td><input type="text" class="form-control" placeholder="Enter university name"></td>
                <td><input type="text" class="form-control" placeholder="Enter university name"></td>
                <td><input type="text" class="form-control" placeholder="Enter university name"></td>
            </tr>
            <tr>
                <th>Grade</th>
                <td><input type="text" class="form-control" placeholder="Enter grade"></td>
                <td><input type="text" class="form-control" placeholder="Enter grade"></td>
                <td><input type="text" class="form-control" placeholder="Enter grade"></td>
                <td><input type="text" class="form-control" placeholder="Enter grade"></td>
            </tr>
        </tbody>
    </table>
</section>

<section class="resume-section">
    <p class="info-text">
        For more details, fill out the form.
        <a href="https://www.myperfectcv.co.uk/build-cv/choose-template?uploadtest=true" target="_blank">Click here for more themes</a>
    </p>
    <button type="submit" class="btn btn-primary">Submit & Save</button>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='/education'">Next Step</button>
</section>
` }) %>
