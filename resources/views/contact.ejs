<%- include('layout', { title: 'Contact', header: 'Contact Us', body: `


<section class="form-section">
    <form action="/submit-contact" method="post">
        <div class="form-group">
            <label for="profile-photo">Upload Your Profile Photo</label>
            <input type="file" id="profile-photo" name="profile-photo" class="form-control">
        </div>

        <div class="form-group">
            <label for="phone-number">Phone Number</label>
            <input type="number" id="phone-number" name="phone-number" class="form-control" placeholder="Enter your phone number">
        </div>

        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email">
        </div>

        <div class="form-group">
            <label for="home-address">Home Address</label>
            <input type="text" id="home-address" name="home-address" class="form-control" placeholder="Enter your home address">
        </div>

        <div class="form-group">
            <label for="signature">Signature</label>
            <input type="file" id="signature" name="signature" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Submit & Save</button>
    </form>
</section>
` }) %>
