<%- include('layout', { title: 'Customer Service', header: 'Customer Service', body:` 

<!-- Customer Service Section -->
<section class="customer-service-section">
    <h2>How Can We Help You?</h2>
    <p>If you have any issues or inquiries, please reach out to our support team. We are here to assist you!</p>
    
    <!-- Contact Form -->
    <div class="contact-form">
        <h3>Contact Us</h3>
        <form action="/submit-customer-service" method="post">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
            </div>
            
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject of your inquiry" required>
            </div>
            
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" class="form-control" rows="4" placeholder="Enter your message" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>

    <!-- FAQs Section -->
    <div class="faqs">
        <h3>Frequently Asked Questions</h3>
        <div class="faq-item">
            <h4>How do I reset my password?</h4>
            <p>To reset your password, go to the login page and click on "Forgot Password". Follow the instructions to reset it.</p>
        </div>
        <div class="faq-item">
            <h4>What should I do if I encounter a technical issue?</h4>
            <p>If you encounter a technical issue, please contact our support team using the form above or check our help center for troubleshooting guides.</p>
        </div>
        <div class="faq-item">
            <h4>How can I update my personal information?</h4>
            <p>You can update your personal information by logging into your account and navigating to the "Profile" section.</p>
        </div>
    </div>
</section>
` }) %>
